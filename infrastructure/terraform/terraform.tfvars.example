# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
region      = "us-east-1"
environment = "poc"
name_prefix = "aurora-logs-poc"
cost_center = "engineering"

# Kubernetes Deployment
deploy_k8s_resources     = true
k8s_namespace           = "aurora-logs"

# Cost Optimization Settings
enable_cost_optimization = true  # Enable for POC/Dev, disable for Production
enable_fargate          = false # Enable for serverless pods

# Autoscaling Features
enable_vpa  = false  # Enable if VPA is installed in cluster
enable_keda = false  # Enable if KEDA is installed in cluster

# Network and Security
enable_network_policies = true  # Recommended for production

# Monitoring
enable_monitoring    = false  # Enable for production
enable_prometheus    = false  # Enable if Prometheus is installed
enable_otel         = true   # Enable for distributed tracing
enable_grafana_agent = false  # Enable if using Grafana Cloud

# Application Configuration
kafka_retention_hours       = 24   # Reduce for POC, increase for production
openobserve_retention_days  = 30   # Adjust based on compliance requirements
processor_max_batch_size    = 100  # Tune based on workload
discovery_interval_seconds  = 300  # 5 minutes

# Resource Sizing
kafka_storage_size       = "5Gi"   # Increase for production
openobserve_storage_size = "10Gi"  # Increase for production

# High Availability (set to 1 for POC, 3+ for production)
kafka_replicas       = 1
openobserve_replicas = 1
discovery_replicas   = 1

# Image Configuration
image_pull_policy = "Always"  # Use "IfNotPresent" for stable versions
image_registry    = ""        # Set to ECR URL if using private registry

# Feature Flags
enable_profiling   = false  # Enable for performance debugging
enable_caching     = true   # Recommended for better performance
enable_compression = true   # Recommended for cost optimization

# Credentials (use environment variables in production)
# export TF_VAR_openobserve_admin_email="admin@company.com"
# export TF_VAR_openobserve_admin_password="SecurePassword123!"

# Production example:
# environment = "production"
# enable_cost_optimization = false
# enable_monitoring = true
# enable_prometheus = true
# kafka_replicas = 3
# openobserve_replicas = 2
# discovery_replicas = 2
# kafka_storage_size = "50Gi"
# openobserve_storage_size = "100Gi"