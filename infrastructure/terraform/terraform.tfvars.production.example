# Production Environment Configuration
environment = "production"
region      = "us-east-1"
name_prefix = "aurora-logs-prod"
cost_center = "engineering"

# VPC Configuration for Production
vpc_cidr = "10.0.0.0/16"
az_count = 3  # Use all 3 AZs for HA

# Production CIDR blocks
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs  = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24", "10.0.23.0/24"]

# Restrict access in production - update with your corporate/VPN CIDRs
allowed_cidr_blocks = [
  "10.0.0.0/8",      # Internal network
  "172.16.0.0/12",   # VPN range
  "198.51.100.0/24"  # Office IP range (example)
]

# Additional tags
additional_tags = {
  Owner            = "Platform Team"
  DataClassification = "Internal"
  BackupRequired   = "true"
  ComplianceScope  = "SOC2"
}