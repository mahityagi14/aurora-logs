# POC Environment Configuration
environment = "poc"
region      = "us-east-1"
name_prefix = "aurora-logs-poc"
cost_center = "engineering"

# VPC Configuration for POC
vpc_cidr = "10.0.0.0/16"
az_count = 2  # Use only 2 AZs for POC to save cost

# Smaller CIDR blocks for POC
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs  = ["10.0.11.0/24", "10.0.12.0/24"]
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24"]

# Allow all for POC (restrict in production)
allowed_cidr_blocks = ["0.0.0.0/0"]

# Additional tags
additional_tags = {
  Owner       = "DevOps Team"
  Purpose     = "POC Testing"
  AutoShutdown = "true"
}